{
    "name": "tf_efficientnet_b0_ns_sam_0104_softmax_dataset_512_3_video",

    "n_gpu": 1,
    "use_amp": false,

    "arch": {
        "type": "Model",
        "args": {
            "model": "tf_efficientnet_b0_ns",
            "pretrained": true,
            "num_classes": 3
        }
    },

    "data_loader": {
        "type": "CapsulePillcamVideoTrainDataLoader",
        "args":{
            "data_dir": "D:/capsule_data_2022/kangwon_pillcam_train_2022/",
            "num_clip": 16,
            "batch_size": 1,
            "size": [512, 512],
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 8,
            "training" : true,
            "classes" : [1, 2, 3],
            "class_names":[1, 2, 3]
        }
    },

     "valid_data_loader": {
        "type": "CapsulePillcamVideoTrainDataLoader_duk",
        "args":{
            "data_dir": "D:/capsule_data_2022/duk_test_dataset/",
            "num_clip": 16,
            "batch_size": 1,
            "size": [512, 512],
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 8,
            "training" : false,
            "classes" : [1, 2, 3],
            "class_names": [1, 2, 3]
        }
    },

    "optimizer": {
        "type": "SAM",
        "args":{
            "lr": 0.01,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss",
    "loss_": "bce_loss",
    "loss_CB": "CB_loss",

    "metrics": [
        "accuracy"
    ],

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": -1,

        "tensorboard": false
    }
}
